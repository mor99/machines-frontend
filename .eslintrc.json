{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "standard-react"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "legacyDecorators": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent":"off",
        "react/jsx-closing-tag-location":"off"
    },
    "parser": "babel-eslint"

}